<!DOCTYPE html>
<html lang="kr">
<head>
{{> include/_header}}
</head>

<body>
{{> include/_nav}}

<div class="container" id="main">
    <div class="col-md-12 col-sm-12 col-lg-12">
       {{#question}}
        <div class="panel panel-default">
          <header class="qna-header">
              <h2 class="qna-title">{{title}}</h2>
          </header>
          <div class="content-main">
              <article class="article">
                  <div class="article-header">
                      <div class="article-header-thumb">
                          <img src="https://graph.facebook.com/v2.3/100000059371774/picture" class="article-author-thumb" alt="">
                      </div>
                      <div class="article-header-text">
                          <a href="/users/92/kimmunsu" class="article-author-name">{{writer}}</a>
                          <a href="/questions/413" class="article-header-time" title="퍼머링크">
                              {{createdAt}}
                              <i class="icon-link"></i>
                          </a>
                      </div>
                  </div>
                  <div class="article-doc">{{contents}}</div>
                  <div class="article-util">
                      <ul class="article-util-list">
                          <li>
                              <a class="link-modify-article" href="/question/updateForm/{{id}}">수정</a>
                          </li>
                          <li>
                              <form class="form-delete" action="/question/delete/{{id}}" method="GET">
                                  <input type="hidden" name="_method" value="DELETE">
                                  <button class="link-delete-article" type="submit">삭제</button>
                              </form>
                          </li>
                          <li>
                              <a class="link-modify-article" href="/index.html">목록</a>
                          </li>
                      </ul>
                  </div>
              </article>
            {{/question}}

              <div class="qna-comment">
                  <div class="qna-comment-slipp">
                      {{#answerSize}}
                      <p class="qna-comment-count"><strong>{{answerSize}}</strong>개의 의견</p>
                      {{/answerSize}}

                      <div class="qna-comment-slipp-articles">
                        {{#answers}}
                          <article class="article" id="answer-1405">
                              <div class="article-header">
                                  <div class="article-header-thumb">
                                      <img src="https://graph.facebook.com/v2.3/1324855987/picture" class="article-author-thumb" alt="">
                                  </div>
                                  <div class="article-header-text">
                                      <a href="/users/1/자바지기" class="article-author-name">{{writer}}</a>
                                      <a href="#answer-1434" class="article-header-time" title="퍼머링크">
                                          {{createdAt}}
                                      </a>
                                  </div>
                              </div>
                              <div class="article-doc comment-doc"><p>{{contents}}</p></div>
                              <div class="article-util">
                                  <ul class="article-util-list">
                                      <li>
                                          <a class="link-modify-article" href="/questions/413/answers/1405/form">수정</a>
                                      </li>
                                      <li>
                                          <form class="delete-answer-form" action="/answer/delete/{{id}}" method="get">
                                              <input type="hidden" value="{{question_id}}">
                                              <button type="submit" class="delete-answer-button">삭제</button>
                                          </form>
                                      </li>
                                  </ul>
                              </div>
                          </article>
                        {{/answers}}
                        {{#question}}
                          <form class="submit-write" action="/answer/create/{{id}}" method="post">
                               <div class="form-group">
                                    <label for="writer">작성자</label>
                                    <input type="text" class="form-control" id="writer" name="writer" placeholder="작성자"/>
                               </div>
                              <div class="form-group" style="padding:14px;">
                                  <textarea class="form-control" placeholder="Update your status" name="contents"></textarea>
                              </div>
                              <button class="btn btn-success pull-right" type="submit">답변하기</button>
                              <div class="clearfix" />
                          </form>
                        {{/question}}
                      </div>
                  </div>
              </div>
          </div>
        </div>
    </div>
</div>

<script type="text/template" id="answerTemplate">
	<article class="article">
		<div class="article-header">
			<div class="article-header-thumb">
				<img src="https://graph.facebook.com/v2.3/1324855987/picture" class="article-author-thumb" alt="">
			</div>
			<div class="article-header-text">
				<a href="#" class="article-author-name">{0}</a>
				<div class="article-header-time">{1}</div>
			</div>
		</div>
		<div class="article-doc comment-doc">
			{2}
		</div>
		<div class="article-util">
		<ul class="article-util-list">
			<li>
				<a class="link-modify-article" href="/api/qna/updateAnswer/{3}">수정</a>
			</li>
			<li>
				<form class="delete-answer-form" action="/api/questions/{3}/answers/{4}" method="POST">
					<input type="hidden" name="_method" value="DELETE">
                     <button type="submit" class="delete-answer-button">삭제</button>
				</form>
			</li>
		</ul>
		</div>
	</article>
</script>

{{> include/_scripts}}
</body>
</html>